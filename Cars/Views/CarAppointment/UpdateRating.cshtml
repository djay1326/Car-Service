@model Dal.Models.CarService
@{
    Layout = null;
}

<button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
</button>
<form>

    <div>
        <h5><b>Rate the garage</b></h5>
    </div>
    <hr>
    <div>
        <span style="font-size:20px;">Update Rating:</span>
        <span id="getRate" class="getRatings"></span>
        <script>RatingUpdate('@Model.Ratings') </script>
        <div class="updatedresult"></div>
    </div>

    <div class="form-row mt-3">
        <div class="form-group col-md-12">
            <label for="fbofsp" class="cm-dez">Any Comments:</label>
            <textarea class="form-control" asp-for="Comments" id="comments" rows="3" placeholder=""></textarea>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <button type="button" class="btn btn-success" id="UpdateRatingOnSubmit">Submit</button>
        </div>
    </div>
</form>

<script>
    $("#getRate").rateYo().on("rateyo.change", function (e, data) {
        var rating = data.rating;
        $(this).parent().find('.updatedresult').text('rating : ' + rating);
        $(this).parent().find('.updatedresult').val(rating);
        console.log("hie there!!");
    });
</script>


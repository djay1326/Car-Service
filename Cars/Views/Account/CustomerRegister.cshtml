@*@model project.ViewModels.RegisterViewModel*@
@model Dal.ViewModels.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="images/favicon_img.png" rel="shortcut icon" type="image/x-icon">
    @*<link rel="stylesheet" type="text/css" href="css/userNewAccount.css">*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <title>Register</title>
    <style type="text/css">
        body {
            /*background-image: linear-gradient(to right, #4B1248,#F0C27B);*/
            background-image: linear-gradient(120deg, #d4fc79 0%, #96e6a1 100%);
        }

        .prices_heading {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #4f4f4f;
            margin-top: 30px;
        }

            .prices_heading h1 {
                font-size: 36px;
            }

        .prices_box {
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .left_line, .right_line {
            width: 62px;
            height: 1px;
            background-color: #CCCCCC;
            margin: 0px 8px;
        }

        button:focus, input:focus, textarea:focus, select:focus {
            box-shadow: none !important;
            border: 2px solid #1d7a8c !important;
            outline: #1d7a8c !important;
        }

        .abb {
            height: 20px;
            width: 20px;
        }

        .createNewAccount {
            max-width: 615px;
            margin: 0 auto;
            overflow-x: hidden;
            padding: 15px;
        }

        .clr1 {
            color: #646464;
        }

        .clr2 {
            color: #1d7a8c;
        }

        .abc {
            font-size: 14px;
        }

        .submitButton {
            min-width: 170px;
            padding: 10px 30px !important;
            background-color: #1d7a8c !important;
        }
    </style>
</head>

<body>
    <div class="header1" id="topheader">

        <div class="prices_heading position-relative">
            <h1 class="font-weight-bolder">Customer New Account</h1>
            <div class="prices_box">
                <div class="left_line"></div>
                <img src="/images/separator.png" alt="" />
                <div class="right_line"></div>
            </div>
        </div>

        <div class="my-5">
            @* NOTE : If we are dealing with input type="file" then we need to add enctype in form*@
            <form method="post" enctype="multipart/form-data" class="createNewAccount" autocomplete="off">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="text" asp-for="FirstName" placeholder="First name" class="bdrheight form-control">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="text" asp-for="LastName" placeholder="Last name" class="bdrheight form-control">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="email" asp-for="Email" placeholder="Email Address" class="bdrheight form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <div class="d-flex">
                                <input type="text" value="+91" disabled style="max-width: 55px;" class="bdrheight form-control">
                                <input type="text" asp-for="MobileNo" placeholder="Mobile number" class="bdrheight form-control">
                                <span asp-validation-for="MobileNo" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="text" asp-for="AddressLine1" placeholder="Address Line 1 " class="bdrheight form-control" required>
                            <span asp-validation-for="AddressLine1" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <div class="d-flex">
                                <input type="text" asp-for="AddressLine2" placeholder="Address Line 2" class="bdrheight form-control">
                                <span asp-validation-for="AddressLine2" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="text" asp-for="City" placeholder="Enter City" class="bdrheight form-control" required>
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <div class="d-flex">
                                <input type="text" asp-for="State" placeholder="Enter State" class="bdrheight form-control" required>
                            </div>
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="text" asp-for="Postalcode" placeholder="Enter Postal Code" class="bdrheight form-control">
                            <span asp-validation-for="Postalcode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <div class="custom-file">
                                <input asp-for="CoverPhoto" type="file" class="custom-file-input" id="customFile">
                                @*We Don't need type="file" bcoz we have already made it IFormFile so it will consider it automatically*@
                                <label class="custom-file-label" for="customFile">Choose profile picture</label>
                            </div>
                            <span asp-validation-for="CoverPhoto" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="password" asp-for="Password" placeholder="Password" class="bdrheight form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="form-group d-flex flex-column">
                            <input type="password" asp-for="ConfirmPassword" id="confirmpassword" placeholder="Confirm password" class="bdrheight form-control">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!--<div class="row">
            <div class="col-sm-12 mb-3">-->
                @*<label asp-for="CoverPhoto" class="control-label"></label>*@
                <!--<div class="custom-file mb-3">
            <input asp-for="CoverPhoto" type="file" class="custom-file-input" id="customFile">-->
                @*We Don't need type="file" bcoz we have already made it IFormFile so it will consider it automatically*@
                <!--<label class="custom-file-label" for="customFile">Choose your profile picture</label>
                </div>
                <span asp-validation-for="CoverPhoto" class="text-danger"></span>
            </div>
        </div>-->

                <div class="d-flex align-items-center my-1">
                    <input type="checkbox" name="termsandconditions" class="abb">
                    <label for="termsandconditions" class="abc ml-2 mt-2">I agree with the <span><a href="#" class="text-decoration-none clr2">terms and conditions</a></span> of Helperland GmbH.</label>
                </div>
                <div class="d-flex align-items-center my-1">
                    <input type="checkbox" name="privacypolicy" class="abb">
                    <label for="privacypolicy" class="abc ml-2 mt-2">I have read the <span><a href="#" class="text-decoration-none clr2">privacy policy.</a></span> </label>
                </div>
                <div class="text-center mt-4">
                    <button class="btn submitButton text-light rounded-pill" id="registerButton" type="submit">Register</button>
                </div>
            </form>
            @if (!User.IsInRole("Admin"))
            {
                <div class="text-center mt-3 clr1 font-weight-bold">
                    Already registered?
                    <span><a class="text-white text-decoration-none" asp-controller="Account" asp-action="Login">Login now</a></span>
                </div>
            }

        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
</body>
</html>

@{
    Layout = null;
}
<head>
    <style>
        body {
            background-image: linear-gradient(to right, #DECBA4, #3E5151);
        }
        .ah {
            width: 50vw;
        }

        .ht {
            min-height: 40px;
        }
        #loginPopup .modal-content {
            padding: 20px;
            padding-top: 0;
            color: #646464;
        }

        .emaill {
            padding: 5px 40px 5px 15px;
            width: 100%;
        }

        .brdr {
            height: 46px;
            border: 1px solid #e1e1e1;
        }

        .loginPopup .form-group img {
            position: absolute;
            left: auto;
            right: 10px;
            top: 10px;
        }

        .submitButton {
            padding: 15px 30px !important;
            background-color: #1d7a8c !important;
        }

        .forgotPwd {
            color: #1d7a8c;
            text-decoration: none;
        }

        .abb {
            height: 20px;
            width: 20px;
        }
    </style>
</head>

<div class="row">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        @*<div class="d-flex mb-3">
            <input type="email" placeholder="Email Address" class="emaill brdr">
        </div>*@
        <div class="form-group mb-2 col-sm-4 ah">
            <label for="oldPassword">Enter Email:</label>
            <input type="text"  id="input1" placeholder="Email" class="form-control ht" style="width:250px;" required>
            <span class="text-danger"></span>
        </div>
        <button type="submit" class="reschedule-btn rounded-pill text-light text-decoration-none px-4 mt-3 ml-3">
            Submit
        </button>
    </form>
    <div class="text-center mt-2">
        <span class="text-black">Remember Password?</span>
        <a class="forgotPwd text-decoration-none" asp-controller="Account" asp-action="Login">Login now</a>
    </div>
</div>
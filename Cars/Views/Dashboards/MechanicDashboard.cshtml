<div class="row">
    <div class="col-md-6 col-lg-12 col-xl-6">
        <div class="card">
            <div class="card-header">
                <h4 style="font-style:italic;">Appointments</h4>
                <div class="d-block mr-0 ml-auto">
                    <a asp-controller="CarAppointment" asp-action="ListAppointmentRequestsforMechanic" class="btn btn-primary">More</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>User Details</th>
                                <th>Car Details</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.FirstTableData)
                            {

                                <tr style="font-size:14px;">
                                    <td>
                                        @item.UserName<br />
                                        @item.AddressLine1,@item.AddressLine2<br />
                                        @item.City - @item.PostalCode<br />
                                        @item.State
                                    </td>
                                    <td>
                                        @item.CarModel<br />
                                        @item.CarName<br />
                                        @item.CarNumber
                                    </td>
                                    <td>
                                        @if (item.ServiceStatus == 1)
                                        {
                                            <span class="pending">Pending</span>
                                        }

                                        @if (item.ServiceStatus == 3)
                                        {
                                            <span class="cancelled">Cancel</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.ServiceStatus == 1)
                                        {
                                            <button type="button" class="btn dropDownBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                                &#8942
                                            </button>
                                        }

                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a asp-controller="CarAppointment" asp-action="UpdateAppointmentStatus" asp-route-id="@item.Id" asp-route-status="2" asp-route-dashboardId="100" class="text-decoration-none">
                                                    <button class="dropdown-item" type="button">Accept</button>
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-controller="CarAppointment" asp-action="UpdateAppointmentStatus" asp-route-id="@item.Id" asp-route-status="3" asp-route-dashboardId="100" class="text-decoration-none">
                                                    <button class="dropdown-item" type="button">Cancel</button>
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>


                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-12 col-xl-6">
        <div class="card">
            <div class="card-header">
                <h4 style="font-style:italic;">Appointment Services</h4>
                <div class="d-block mr-0 ml-auto">
                    <a asp-controller="CarAppointment" asp-action="ListApprovedAppointments" class="btn btn-info">More</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="overflow-x:hidden;">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr >
                                <th>User Details</th>
                                <th>Car Details</th>
                                <th>Garage Details</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model.SecondTableData)
                            {
                                <tr style="font-size:14px;">
                                    <td>
                                        @item.NameOfUser<br />
                                        @item.UserAddress1,@item.UserAddress2<br />
                                        @item.UserCity - @item.UserPostalCode<br />
                                        @item.UserState
                                    </td>
                                    <td>
                                        @item.CarModel<br />
                                        @item.CarName<br />
                                        @item.CarNumber
                                    </td>
                                    <td>
                                        @item.GarageName<br />
                                        @item.GarageAdd1<br />
                                        @item.GarageAdd2<br />
                                        @item.GarageCity-  @item.GaragePostalCode<br />
                                        @item.GarageState
                                    </td>
                                    <td>
                                        @if (item.MechanicServiceStatus == 2)
                                        {
                                            <span class="completed">Accept</span>
                                        }
                                        @if (item.MechanicServiceStatus == 4)
                                        {
                                            <span class="progress">In.Progress</span>
                                        }
                                        @if (item.MechanicServiceStatus == 5)
                                        {
                                            <span class="waiting">Waiting for</span>
                                            <span class="waiting2">Parts</span>
                                        }
                                        @if (item.MechanicServiceStatus == 6)
                                        {
                                            <span class="done">Completed</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.MechanicServiceStatus == 2 || item.MechanicServiceStatus == 4 || item.MechanicServiceStatus == 5)
                                        {
                                            <button type="button" class="btn dropDownBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                                &#8942
                                            </button>
                                        }
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a asp-controller="CarAppointment" asp-action="UpdateAppointmentStatus" asp-route-id="@item.IdOfAppointment" asp-route-status="4" class="text-decoration-none">
                                                    <button class="dropdown-item" type="button">In Progress</button>
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-controller="CarAppointment" asp-action="UpdateAppointmentStatus" asp-route-id="@item.IdOfAppointment" asp-route-status="5" class="text-decoration-none">
                                                    <button class="dropdown-item" type="button">Waiting For Parts</button>
                                                </a>
                                            </li>
                                            <li>
                                                <a asp-controller="CarAppointment" asp-action="UpdateAppointmentStatus" asp-route-id="@item.IdOfAppointment" asp-route-status="6" class="text-decoration-none">
                                                    <button class="dropdown-item" type="button">Completed</button>
                                                </a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


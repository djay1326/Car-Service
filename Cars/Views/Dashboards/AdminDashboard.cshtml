                    <a asp-controller="Garage" asp-action="ListAllAvailableGaragesforCustomer" class="btn btn-primary">More</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Garage Name</th>
                                <th>Address</th>
                                <th>Timings</th>
                                <th>Services</th>
                            </tr>

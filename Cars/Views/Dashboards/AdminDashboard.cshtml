                                        @item.AddressLine2<br />
                                        @item.City - @item.PostalCode<br />
                                        @item.State
                                    </td>
                                    <td>
                                        @item.OpenTime - @item.CloseTime
                                    </td>
                                    <td>
                                        <a href="#" class="text-decoration-none getServices" routeId="@item.GarageId" style="color:blue;cursor:pointer">Check Services</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-12 col-xl-6">
        <div class="card">
            <div class="card-header">
                <h4 style="font-style:italic;">Customers</h4>
                <div class="d-block mr-0 ml-auto">
                    <a asp-controller="Account" asp-action="CustomersOfAdmin" class="btn btn-info">More</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="overflow-x:hidden;">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Customer Name</th>
                                <th>Customer Details</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody style="font-size:14px;">
                            @foreach (var item in Model.SecondTableValues)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        @item.AddressLine1<br />
                                        @item.City - @item.State<br />
                                        @item.UserName<br />
                                        @item.PhoneNumber
                                    </td>
                                    <td>
                                        <a role="button">
                                            <img src="~/assets/img/edit-icon.png" routeId="@item.Id" class="updateDetails" title="Edit" alt="" height="22" width="22" />
                                        </a>
                                        <a data-bs-toggle="modal" data-bs-target="#exampleModal" routeId="@item.Id" role="button" class="deleteMenu">
                                            <img src="~/assets/img/delete-icon.png" title="Delete" alt="" height="22" width="22">
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-lg-12 col-xl-6">
        <div class="card">
            <div class="card-header">
                <h4>Appointment Services</h4>
                <div class="d-block mr-0 ml-auto">
                    <a asp-controller="CarAppointment" asp-action="AdminViewAllAppointments" class="btn btn-success">More</a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="overflow-x:hidden;">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>User Details</th>
                                <th>Car Details</th>
                                <th>Garage Details</th>
                                <th>Status</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ThirdTableValues)
                            {
                                <tr style="font-size:14px;">
                                    <td>
                                        @item.NameOfUser<br />
                                        @item.UserAddress1,@item.UserAddress2<br />
                                        @item.UserCity - @item.UserPostalCode<br />
                                        @item.UserState
                                    </td>
                                    <td>
                                        @item.CarModel<br />
                                        @item.CarName<br />
                                        @item.CarNumber
                                    </td>
                                    <td>
                                        @item.GarageName<br />
                                        @item.GarageAdd1<br />
                                        @item.GarageAdd2<br />
                                        @item.GarageCity-  @item.GaragePostalCode<br />
                                        @item.GarageState
                                    </td>
                                    <td>
                                        @if (item.MechanicServiceStatus == 1)
                                        {
                                            <span class="pending">Pending</span>
                                        }
                                        @if (item.MechanicServiceStatus == 2)
                                        {
                                            <span class="completed">Accept</span>
                                        }
                                        @if (item.MechanicServiceStatus == 3)
                                        {
                                            <span class="cancel">Cancelled</span>
                                        }
                                        @if (item.MechanicServiceStatus == 4)
                                        {
                                            <span class="progress">In.Progress</span>
                                        }
                                        @if (item.MechanicServiceStatus == 5)
                                        {
                                            <span class="waiting">Waiting for</span>
                                            <span class="waiting2">Parts</span>
                                        }
                                        @if (item.MechanicServiceStatus == 6)
                                        {
                                            <span class="done">Completed</span>
                                        }
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


